<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MyWatchList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Stock Details"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Replace by stock symbol"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/stock_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Live Price: "
            android:textColor="#181819"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stock_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Open: "
            android:textColor="#181819"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stock_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="High: "
            android:textColor="#D51313"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stock_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Low: "
            android:textColor="#0DA113"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stock_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Close: "
            android:textColor="#181819"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stock_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Volume: "
            android:textColor="#181819"
            android:textSize="24sp" />

        <Button
            android:id="@+id/monthly"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Check Monthly Graph"
            android:textSize="24sp"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/daily"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Check Daily Graph"
            android:textSize="24sp"
            app:backgroundTint="#FF9800" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>